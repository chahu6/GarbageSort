
.outter {
	position: fixed;
	z-index: 998;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: rgba(0, 0, 0, 0.9);
}
.inner {
	position: fixed;
	z-index: 999;
	display: flex;
	justify-content: center;

	flex-direction: column;
	align-items: center;
	top: 50%;
	left: 50%;
	min-width: 500rpx;
	min-height: 380rpx;
	max-width: 100%;
	max-height: 80%;
	-webkit-transform: translate(-50%, -65%);
	        transform: translate(-50%, -65%);
	background: none;
	box-shadow: none;
}
