
.container {
  padding: 20px;
}
.form-group {
  margin-bottom: 20px;
}
.form-label {
  font-size: 16px;
  margin-bottom: 10px;
}
.form-input {
  width: 100%;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 0 10px;
}
.button-group {
  text-align: center;
}
.submit-button {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 10px 20px;
  cursor: pointer;
}

